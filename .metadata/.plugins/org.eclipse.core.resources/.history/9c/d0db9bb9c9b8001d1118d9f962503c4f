package edu.java.conditional03;

import java.util.Scanner;

public class ConditionalMain03 {

	public static void main(String[] args) {
		
		// 간단한 성적 처리 프로그램
		// 3과목 시험, JAVA, SQL, HTML 
		// 세과목 평균 내기
		// 90 > A , 80 > B, 70 > C 60 > D 60 이하는 E
		
		
		Scanner sc1 = new Scanner(System.in);
		
		System.out.println("java 과목 점수를 입력해주세요");
		int java = sc1.nextInt();
		System.out.println("sql 과목 점수를 입력해주세요");
		int sql = sc1.nextInt();
		System.out.println("html 과목 점수를 입력해주세요");
		int html = sc1.nextInt();
		
		System.out.println("학생의 java 점수는 " + java + " 점, sql 점수는 " + sql + " 점, html 점수는 " + html + " 점 입니다.");
		
		double sum = java + sql + html;
		
		System.out.println("학생의 총점은 : " + sum + " 점 입니다.");
		
		double avg = sum / 3;
		
		System.out.println("학생의 평균점은 : " + avg + " 점 입니다.");
		String str1;
		
		if (avg > 90 ) {
			str1 = "A";
		}
		
		else if (avg > 80 ) {
			str1 = "B";
		}
		
		else if ( avg > 70 ) {
			str1 = "C";
		}
		
		else if ( avg > 60 ) {
			str1 = "D";
		}
		
		else {
			str1 = "F";
		}
		
		if ( str1 == "F" ) {
			System.out.println("해당 학생은 낙제입니다");
		}
		System.out.println("해당 학생의 학점은 " + str1 + " 등급");
	}

}
