package edu.java.variable01; // 첫 줄은 반드시 패키지 선언문이 와야함.

public class VariableMain01 { //클래스 선언

	public static void main(String[] args) { // 메인메서드 선언
		//변수(variable) : 프로그램에서 필요한 데이터를 저장하는 메모리 공간
		//(1) 변수 선언 => (2) 변수 초기화(값을 처음 저장하는 작업)
		
		int x; // 변수 선언 ( 타입 변수명 ; )
		x = 100; // 변수 초기화

	}

}
